<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck"
    tools:context=".MainActivity">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-4118077067837317/4025479840" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/custom_font"
                android:gravity="center_horizontal"
                android:text="Set Timer"
                android:textAllCaps="true"
                android:textColor="#C00021"
                android:textSize="24sp"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/options"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="64dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/custom_font"
                    android:gravity="center_horizontal"
                    android:text="-"
                    android:textColor="#002962"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/counter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/custom_font"
                    android:gravity="center_horizontal"
                    android:text="10"
                    android:textColor="#002962"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/custom_font"
                    android:gravity="center_horizontal"
                    android:text="+"
                    android:textColor="#002962"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:background="#002962"
            android:clickable="true"
            android:fontFamily="@font/custom_font"
            android:padding="20dp"
            android:text="PLAY"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:weightSum="4">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentEnd="false"
                android:layout_toRightOf="@id/imageView4"
                android:layout_weight="1"
                android:background="#A0001C"
                android:padding="8dp"
                app:srcCompat="@drawable/baseline_star_white_48dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="#004E89"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/baseline_info_white_48dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/imageView7"
                android:layout_weight="1"
                android:background="#407BA7"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/baseline_emoji_people_white_48dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/imageView6"
                android:layout_weight="1"
                android:background="#800016"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/baseline_share_white_48dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/play2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:background="#C00021"
                android:clickable="true"
                android:fontFamily="@font/custom_font"
                android:padding="20dp"
                android:paddingTop="30dp"
                android:text="LOGOUT"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>